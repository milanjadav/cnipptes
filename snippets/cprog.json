    "Palindrome Program": {
        "prefix": "!palin",
        "body": [
            "#include <stdio.h>",
            "int main()",
            "{",
            "  int n, r = 0, t;",
            "",
            "  printf(\"Enter a number to check if it's a palindrome or not\\n\");",
            "  scanf(\"%d\", &n);",
            "",
            "  t = n;",
            "",
            "  while (t != 0)",
            "  {",
            "    r = r * 10;",
            "    r = r + t%10;",
            "    t = t/10;",
            "  }",
            "",
            "  if (n == r)",
            "    printf(\"%d is a palindrome number.\\n\", n);",
            "  else",
            "    printf(\"%d isn't a palindrome number.\\n\", n);",
            "",
            "  return 0;",
            "}"
        ],
        "description": "Palindrome Program"
    }
